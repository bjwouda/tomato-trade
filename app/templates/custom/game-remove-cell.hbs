<div class="btn-group btn-group-xs">
  {{#if (get record '_aboutToDelete')}}
    <button class="btn btn-danger" {{action 'sendAction' 'confirm' record}}>{{t 'index.confirm'}}</button>
    <button class="btn btn-info" {{action 'sendAction' 'cancel' record}}>{{t 'index.cancel'}}</button>
  {{else}}
    <button class="btn btn-danger" {{action 'sendAction' 'remove' record}}>{{t 'index.remove'}}</button>
  {{/if}}
</div>