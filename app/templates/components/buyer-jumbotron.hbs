<div class="jumbotron jumbotron-header">
  
  <div class="row">
    <div class="col-sm-6">
      <h3 class="property-label">{{t 'player.buyerProperties.fine'}}</h3>
    </div>
    <div class="col-sm-6">
      <h3 class="property-label">{{t 'player.buyerProperties.fixedCosts'}}</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <p class="property-value">
        {{#if isTutorialActive}}
          <span class="to-money" />{{t 'tutorial.player.values.buyer.fine'}}
        {{else}}
          <span class="to-money" />{{digit-format model.userGame.fine}}
        {{/if}}
      </p>
    </div>
    <div class="col-sm-6">
      <p class="property-value">
        {{#if isTutorialActive}}
          <span class="to-money" />{{t 'tutorial.player.values.buyer.fixedCosts'}}
        {{else}}
          <span class="to-money" />{{digit-format model.userGame.fixedCost}}
        {{/if}}
      </p>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-6">
      {{tutorial-list tutorial='player' step='buyerPropertyFine' active=isTutorialActive}}
    </div>
    <div class="col-sm-6">
      {{tutorial-list tutorial='player' step='buyerPropertyFixedCosts' active=isTutorialActive}}
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-6">
      <h3 class="property-label">{{t 'player.buyerProperties.retailPrice'}}</h3>
    </div>
    <div class="col-sm-6">
      <h3 class="property-label" />
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <p class="property-value">
        {{#if isTutorialActive}}
          <span class="to-money" />{{t 'tutorial.player.values.buyer.retailPrice'}}
        {{else}}
          <span class="to-money" />{{digit-format model.userGame.retailPrice}}
        {{/if}}
      </p>
    </div>
    <div class="col-sm-6">
      <p class="property-value" />
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-6">
      {{tutorial-list tutorial='player' step='buyerPropertyRetailPrice' active=isTutorialActive}}
    </div>
    <div class="col-sm-6">
      
    </div>
  </div>
  
  {{tutorial-row tutorial='player' step='buyerPropertiesIntroduction2' active=isTutorialActive}}
  {{tutorial-row tutorial='player' step='buyerPropertiesConclusion2' active=isTutorialActive}}
  
</div>
